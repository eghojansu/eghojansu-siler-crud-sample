{% extends 'admin.twig' %}

{% block title %}{{ 'Dashboard ~ ' ~ parent() }}{% endblock %}

{% block content %}
  <p><em>Welcome {{ user.fullname }} ~</em></p>

  <p>Your posts</p>

  {% if action_message %}
    <div class="alert success">
      {{ action_message|raw }}
    </div>
  {% endif %}
  <div class="clearfix">
    <a class="button button-primary" href="admin/post/create">New Post</a>
  </div>
  <table class="u-full-width">
    <thead>
      <tr>
        <th>#</th>
        <th>Title</th>
        <th>Date</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody>
      {% for post in posts %}
        <tr>
          <td>{{ loop.index }}</td>
          <td>{{ post.title }}</td>
          <td>{{ post.created_at|date('M d, Y H:i') }}</td>
          <td>
            <a class="button small m0" href="admin/post/edit/{{ post.id }}">Edit</a>
            <a class="button small m0" href="admin/post/delete/{{ post.id }}" data-action="delete">Delete</a>
          </td>
        </tr>
      {% endfor %}
    </tbody>
  </table>
{% endblock %}